= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.rich_text_area :body
  .field
    = f.label :photo
    = f.file_field :photo, accept: 'image/png,image/jpeg'
  .actions
    = f.submit 'Save'
