= title t('forms.password_reset.title')

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|

  = render "users/shared/error_messages", resource: resource

  .field
    = f.label :email
    = f.email_field :email, :autocomplete => "email", "aria-required" => true, required: true, :autofocus =>true

  = f.submit t('forms.password_reset.submit')


